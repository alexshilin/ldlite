  <gap:config-file platform="android" parent="/manifest">
  	<supports-screens android:xlargeScreens="false" android:largeScreens="true" android:smallScreens="true" />
	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />
  </gap:config-file>
  
  <gap:config-file platform="android" parent="/manifest" mode="delete">
	  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
	  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
	  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  </gap:config-file>
  
  <gap:config-file platform="ios" parent="UIStatusBarHidden">
      <true/>
  </gap:config-file>
  
  <icon src="icon.png"/>
  <splash src="splash.png" />
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="2000"/>
  
  <platform name="android">
	<preference name="android-minSdkVersion" value="14" />
	<preference name="android-targetSdkVersion" value="19" />
    <icon src="res/icon/android/ldpi.png" density="ldpi"/>
    <icon src="res/icon/android/mdpi.png" density="mdpi"/>
    <icon src="res/icon/android/hdpi.png" density="hdpi"/>
    <icon src="res/icon/android/xhdpi.png" density="xhdpi"/>
    <icon src="res/icon/android/xxhdpi.png" density="xxhdpi"/>
    <icon src="res/icon/android/xxxhdpi.png" density="xxxhdpi"/>
    <splash src="res/screen/android/drawable-port-ldpi-screen.png" density="ldpi"/>
    <splash src="res/screen/android/drawable-port-mdpi-screen.png" density="mdpi"/>
    <splash src="res/screen/android/drawable-port-hdpi-screen.png" density="hdpi"/>
    <splash src="res/screen/android/drawable-port-xhdpi-screen.png" density="xhdpi"/>
    <splash src="res/screen/android/drawable-port-xxhdpi-screen.png" density="xxhdpi"/>
    <splash src="res/screen/android/drawable-port-xxxhdpi-screen.png" density="xxxhdpi"/>
  </platform>
  
  
  <platform name="ios">
    <icon src="res/icon/ios/Icon.png" platform="ios" width="57" height="57"/>
